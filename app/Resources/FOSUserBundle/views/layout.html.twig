{% extends '::base.html.twig' %}

{% block content %}
            <div class="text-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <span>Zalogowany jako <b>{{ app.user.username }}</b></span>
                    <a href="{{ path('fos_user_profile_show') }}">Moje dane</a>
                    <a href="{{ path('fos_user_profile_edit') }}">Edycja danych</a>
                    <a href="{{ path('fos_user_security_logout') }}">Wyloguj</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">Logowanie</a>
                    <a href="{{ path('fos_user_registration_register') }}">Rejestracja</a>
                {% endif %}
            </div>
            <div>
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            </div>
            <div>
                {% block fos_user_content %}{% endblock fos_user_content %}
            </div>
{% endblock %}
