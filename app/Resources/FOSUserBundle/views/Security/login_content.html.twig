{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <h2 class="form-signin-heading">Zaloguj się</h2>
    <label for="username" class="sr-only"></label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="login"/>

    <label for="password" class="sr-only"></label>
    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="hasło"/>

    <div class="checkbox">
        <label for="remember_me">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>Zapamiętaj mnie
        </label>
    </div>

    <input type="submit" id="_submit" name="_submit" value="Wyślij" class="btn btn-lg btn-primary btn-block"/>
    <div class="remember">
        <a href="{{ path('fos_user_resetting_request') }}">Nie pamiętasz hasła?</a>
    </div>
</form>
